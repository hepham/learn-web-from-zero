mixin tourItem(image,price,title)
    .tour
            .tour-top
                img.tour-image(src=image, alt='Lago di Braies,Italy')
                span.tour-price= price
                .tour-content
                h3.tour-title= title
                .tour-rating
                    .tour-review
                        .tour-star
                            i.fa-solid.fa-star
                        .tour-review-count
                            span 4.8(12 reviews)
                    span.tour-duration Duration:9 hours
                a.tour-button(href='https:google.com', target='_blank', rel='noopner noreferrer') Tours Price $61

